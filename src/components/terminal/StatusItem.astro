---
/**
 * StatusItem - Key-value status display
 * 
 * @prop {string} label - Status label
 * @prop {string} value - Status value
 * @prop {string} [status] - Status type: 'run' | 'wait' | 'idle' | 'active' | 'standby'
 */
interface Props {
  label: string;
  value: string;
  status?: 'run' | 'wait' | 'idle' | 'active' | 'standby';
}

const { label, value, status } = Astro.props;

const statusColors: Record<string, string> = {
  run: 'text-green-400',
  wait: 'text-amber-400',
  idle: 'text-amber-500/50',
  active: 'text-green-400',
  standby: 'text-blue-400',
};

const colorClass = status ? statusColors[status] || 'text-amber-500/70' : 'text-amber-500/70';
---

<div class="flex justify-between text-xs border-b border-amber-500/20 pb-1">
  <span class="text-amber-300">{label}</span>
  <span class={colorClass}>{value}</span>
</div>
