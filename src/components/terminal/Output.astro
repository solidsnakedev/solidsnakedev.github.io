---
/**
 * Output - System output message line
 * 
 * Single message usage:
 *   <Output type="info">Message text</Output>
 * 
 * @prop {string} type - Message type: 'sys' | 'ok' | 'success' | 'error' | 'warn' | 'net' | 'info'
 * @prop {string} [class] - Additional classes
 */
interface Props {
  type?: 'sys' | 'ok' | 'success' | 'error' | 'warn' | 'net' | 'info';
  class?: string;
}

const { type = 'sys', class: className = '' } = Astro.props;

const typeLabels: Record<string, string> = {
  sys: 'SYS',
  ok: 'OK',
  success: 'OK',
  error: 'ERROR',
  warn: 'WARN',
  net: 'NET',
  info: 'SYS',
};

const typeStyles: Record<string, string> = {
  sys: 'text-amber-500/60',
  ok: 'text-green-400',
  success: 'text-green-400',
  error: 'text-red-400',
  warn: 'text-yellow-400',
  net: 'text-amber-500/60',
  info: 'text-amber-500/60',
};
---

<div class:list={['text-xs border-l-2 border-amber-500/30 pl-3', className]}>
  <span class={typeStyles[type]}>[{typeLabels[type]}]</span>
  <span class="text-white/80 ml-1"><slot /></span>
</div>
