---
/**
 * ActivityItem - Log entry with timestamp, type badge, and message
 * 
 * @prop {string} date - Timestamp string (e.g., "2024-01-15")
 * @prop {'COMMIT' | 'DEPLOY' | 'UPDATE' | 'BLOG' | 'CERT' | 'DEBUG'} type - Activity type
 * @prop {string} message - Activity description
 */
interface Props {
  date: string;
  type: 'COMMIT' | 'DEPLOY' | 'UPDATE' | 'BLOG' | 'CERT' | 'DEBUG';
  message: string;
}

const { date, type, message } = Astro.props;

const typeColors: Record<string, string> = {
  COMMIT: 'text-green-400',
  DEPLOY: 'text-blue-400',
  UPDATE: 'text-amber-400',
  BLOG: 'text-purple-400',
  CERT: 'text-cyan-400',
  DEBUG: 'text-red-400',
};

const colorClass = typeColors[type] || 'text-amber-500';
---

<div class="text-xs font-mono">
  <span class="text-amber-500/50">{date}</span>
  <span class={`${colorClass} ml-2`}>[{type}]</span>
  <span class="text-amber-300 ml-2">{message}</span>
</div>
